{% extends '_layouts/base.njk' %}

{% block page_title %}{{ entry. title }}{% endblock %}

{% block description %}Blog entry for {{entry.date}}, {{entry.title}}{% endblock %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      {% block info %}
        <img src="img/pirate.jpg" alt="pirate character" class="img-fluid">
        <p class="byline">By Crit McGillicutty<br>
        <span>Island Breeze Tribune</span></p>
      {% endblock %}
    </div>
    <div class="col-sm-8">

      {% block headline %}<h1>{{entry.title}}</h1>{% endblock %}
       {% block date %}<h5>Captain's log: {{entry.date}}</h5>{% endblock %}
      {% block story %}
        <h1>Entry headline goes here</h1>
        <p>Entry text goes here</p>
      {% endblock %}
    </div>
  </div>
</article>
{% endblock %}
